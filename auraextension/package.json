{
  "name": "auraextension",
  "displayName": "Aura Farm Time Tracker",
  "description": "Gamify programming in VSCode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
        "activationEvents": [
            "onStartupFinished",
            "onView:auraFarmTimeTracker"
        ],
        "main": "./dist/extension.js",
        "contributes": {
            "commands": [
                {
                    "command": "auraextension.helloWorld",
                    "title": "Hello World"
                },
                {
                    "command": "auraextension.setMethodToPomodoro",
                    "title": "Set to Pomodoro Method"
                },
                {
                    "command": "auraextension.setMethodToDefault",
                    "title": "Set to Default Method"
                }
            ],
            "configuration": {
                "title": "AuraFarm Programming",
                "properties": {
                    "auraextension.pomodoro.enabled": {
                        "type": "boolean",
                        "default": false,
                        "description": "Enable or disable Pomodoro Technique mode."
                    },
                    "auraextension.pomodoro.workDuration": {
                        "type": "number",
                        "default": 25,
                        "description": "Duration of a work session in minutes (Pomodoro)."
                    },
                    "auraextension.pomodoro.shortBreakDuration": {
                        "type": "number",
                        "default": 5,
                        "description": "Duration of a short break in minutes."
                    },
                    "auraextension.pomodoro.longBreakDuration": {
                        "type": "number",
                        "default": 20,
                        "description": "Duration of a long break in minutes."
                    },
                    "auraextension.pomodoro.pomodorosBeforeLongBreak": {
                        "type": "number",
                        "default": 4,
                        "description": "Number of Pomodoros before a long break."
                    }
                }
            },
            "viewsContainers": {
                "activitybar": [
                    {
                        "id": "auraFarmTimeTrackerContainer",
                        "title": "Aura Farm Time Tracker",
                        "icon": "media/aura-icon.svg"
                    }
                ]
            },
            "views": {
                "auraFarmTimeTrackerContainer": [
                    {
                        "type": "webview",
                        "id": "auraFarmTimeTracker",
                        "name": "Aura Farm Time Tracker",
                        "icon": "$(clock)"
                    }
                ]
            }
        },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "esbuild": "^0.25.8",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
